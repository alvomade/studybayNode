<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card" style="background-color: black;">
                  <%if(data.botID){%> 
                    <div class="card-header">Bot ID: <%=data.botID%></div>
                    <%}else{%>
                        <div class="card-header">fill in the account details to proceed</div>
                    <%}%>    
                    <div class="card-body">
                        <form action="/" method="POST">
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail</label>
                                <div class="col-md-6">
                                    <input value="<%=data.email%>" type="text" id="email_address" class="form-control" name="email" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                                <div class="col-md-6">
                                    <input value="<%=data.password%>" type="text" id="password" class="form-control" name="password" required>
                                </div>
                            </div>

                            <div class="form-group row">
                              <label for="password" class="col-md-4 col-form-label text-md-right">refresh rate</label>
                              <div class="col-md-6">
                                  <input value="<%=data.refreshRate%>" type="number" id="password" class="form-control" name="refreshRate" required>
                              </div>
                          </div>

                            <div class="form-group row">
                              <label for="password" class="col-md-4 col-form-label text-md-right">price level</label>
                              <div class="col-md-6">
                                  <select name="priceLevel" id="">
                                    <option selected><%=data.priceLevel%></option>
                                    <option value="None">None</option>
                                    <option value="Minimum">Minimum</option>
                                    <option value="Average">Average</option>
                                    <option value="Maximum">Maximum</option>
                                  </select>
                              </div>
                          </div>

                            <div class="form-group row">
                              <label for="password" class="col-md-4 col-form-label text-md-right">unwanted subjects</label>
                              <div class="col-md-6">
                                <textarea name="unwantedSubjects" id="" cols="30" rows="10">
                                  <%=data.unwantedSubjects%>
                                </textarea>
                              </div>
                            </div>

                            <div class="form-group row">
                              <label for="password" class="col-md-4 col-form-label text-md-right"></label>
                              <div class="col-md-6">
                                <input checked type="checkbox" name="bidUrgent"> Bid urgent orders
                              </div>
                          </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Save and continue
                                </button>
                                <!-- <a href="#" class="btn btn-link">
                                    Proceed with current settings?
                                </a> -->
                            </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>







